{
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "mcp": {
    "shadcn": {
      "args": [
        "shadcn@latest",
        "mcp"
      ],
      "command": "npx",
      "type": "stdio"
    },
    "context7": {
      "command": "npx",
      "type": "stdio",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "CONTEXT7_API_KEY"
      ]
    },
    "tavily": {
      "type": "stdio",
      "args": [
        "-y",
        "tavily-mcp"
      ],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      },
      "command": "npx"
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    }
  }
}
